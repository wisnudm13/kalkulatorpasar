<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#232426"
    android:orientation="vertical">

    <TextView
        android:paddingRight="20dp"
        android:fontFamily="@font/roboto_regular"
        android:id="@+id/textViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:gravity="right"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text=""
        />

    <EditText
        android:padding="15dp"
        android:fontFamily="@font/roboto_regular"
        android:id="@+id/editTextTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#232426"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="none"
        android:maxLength="25"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginHorizontal="5dp"
            app:backgroundTint="@null"
            android:background="@drawable/operation_button"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/buttonPercent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="35sp">

        </Button>

        <Button
            app:backgroundTint="@null"
            android:background="@drawable/operation_button"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/buttonAC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="reset"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="35sp">

        </Button>

        <Button
            app:backgroundTint="@null"
            android:background="@drawable/operation_button"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/buttonBackSpace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:onClick="backspaceButton"
            android:text="\u232b"
            android:textColor="@color/white"
            android:textSize="35sp">

        </Button>

        <Button
            app:backgroundTint="@null"
            android:background="@drawable/operation_button"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/buttonDivide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorEvent"
            android:text="\u00F7"
            android:textColor="@color/white"
            android:textSize="35sp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="7">

        </Button>

        <Button
            android:id="@+id/button8"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="8">

        </Button>

        <Button
            android:id="@+id/button9"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="9">

        </Button>

        <Button
            app:backgroundTint="@null"
            android:background="@drawable/operation_button"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/buttonMultiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="operatorEvent"
            android:text="\u00D7">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="4">

        </Button>

        <Button
            android:id="@+id/button5"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="5">

        </Button>

        <Button
            android:id="@+id/button6"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="6">

        </Button>

        <Button
            app:backgroundTint="@null"
            android:background="@drawable/operation_button"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/buttonMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="operatorEvent"
            android:text="-">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="1">

        </Button>

        <Button
            android:id="@+id/button2"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="2">

        </Button>

        <Button
            android:id="@+id/button3"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="3">

        </Button>

        <Button
            app:backgroundTint="@null"
            android:background="@drawable/operation_button"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/buttonPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="operatorEvent"
            android:text="+">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPlusMinus"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="\u207A/-">

        </Button>

        <Button
            android:id="@+id/button0"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text="0">

        </Button>

        <Button
            android:id="@+id/buttonDot"
            app:backgroundTint="@null"
            android:background="@drawable/number_button"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:fontFamily="@font/roboto_regular"
            android:text=".">

        </Button>

        <Button
            app:backgroundTint="@null"
            android:background="@drawable/operation_button"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/buttonEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#834343"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="1"
            android:onClick="resultEvent"
            android:text="\u003D">

        </Button>

    </LinearLayout>


</LinearLayout>